<!-- Robot name -->
<robot name="agv" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- Included URDF Files -->
<xacro:include filename="$(find agv_gazebo)/gazebo/agv_hil.gazebo" />
<xacro:include filename="$(find arts_description)/urdf/arts.xacro" />

<!-- user input dimensions  ( DEBUG: all mass values have been divided by 100 )  --> 
<xacro:property name="robot"    value="agv" />
<xacro:property name="pi"       value="3.141592" />
<xacro:property name="body_length"   value="12." />
<xacro:property name="body_width"    value="3" />
<xacro:property name="body_height"   value="1.4" />
<xacro:property name="body_mass"   value="1000." />
<xacro:property name="platform_length"   value="${body_length}" />
<xacro:property name="platform_width"   value="3." />
<xacro:property name="platform_height"   value=".3" />
<xacro:property name="platform_mass"   value="500." />
<xacro:property name="wheel_width"    value="0.05" />
<xacro:property name="wheel_width_vis"    value="0.3" />
<xacro:property name="wheel_radius"   value="0.9" />
<xacro:property name="wheel_mass"   value="100." />
<xacro:property name="wheel_hinge_width"   value="0.1" />
<xacro:property name="wheel_hinge_mass"   value="10." />
<xacro:property name="lidar_mass"   value="1." />
<xacro:property name="lidar_side"   value="0.15" />

<!-- TNO definitions, measured in meters from ground -->
<xacro:property name="radarbeam_height"   value="0.05" />
<xacro:property name="radarbeam_mountingheight"   value="0.88" />
<xacro:property name="lider_side_mountingheight"   value="0.725" />
<xacro:property name="lider_side_offsetfront"   value="1.04" />
<xacro:property name="arts_mountingheight"	value="2.220" />
<xacro:property name="rtk_mountingheight"	value="1.720" />

<!-- derived dimensions -->
<xacro:property name="wheel_hinge_height"   value="${wheel_radius+0.1}" />
<xacro:property name="body_floor_clearance"   value="${wheel_radius+wheel_hinge_height-body_height}" />
<xacro:property name="footprint_to_baselink_height"   value="${body_floor_clearance+0.5*body_height}" />

<!-- calculated dimensions to measured dimension -->
<xacro:property name="baselink_to_ground_height"   value="${-footprint_to_baselink_height}" />
<xacro:property name="baselink_to_radarbeam_height"   value="${baselink_to_ground_height+radarbeam_mountingheight}" />
<xacro:property name="baselink_to_lidar_height"   value="${baselink_to_ground_height+lider_side_mountingheight}" />
<xacro:property name="baselink_to_arts_height"   value="${baselink_to_ground_height+arts_mountingheight}" />
<xacro:property name="baselink_to_rtk_height"   value="${baselink_to_ground_height+rtk_mountingheight}" />

