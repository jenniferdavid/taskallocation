    <xacro:sensor name="MoveTarget8_2" parent="vehicle" rpy="0 0 0" xyz="3 0 0" />
    <xacro:sensor name="MoveVehicleSpeed_2" parent="vehicle" rpy="0 0 0" xyz="0 0 0" />
    <xacro:sensor name="MoveVehicleState_2" parent="vehicle" rpy="0 0 0" xyz="0 0 0" />
    <xacro:sensor name="MoveWheelSpeed_2" parent="vehicle" rpy="0 0 0" xyz="0 0 0" />

    <xacro:sensor name="Continental20xTrack_4" parent="vehicle" rpy="0 0 2.6" xyz="1.2 1 1" />

</robot>
